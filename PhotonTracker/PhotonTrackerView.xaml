<Window x:Class="PhotonTracker.PhotonTrackerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotonTracker" WindowStyle="SingleBorderWindow"
        mc:Ignorable="d" Height="{Binding WindowHeight, Mode=TwoWay}" Width="{Binding WindowWidth, Mode=TwoWay}"
        Title="Photon Tracker" Topmost="True">
    <Window.DataContext>
        <local:PhotonTrackerViewModel/>
    </Window.DataContext>
    <Grid Background="{Binding AppBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,10,0,0">
            <StackPanel HorizontalAlignment="Right" Margin="0,0,10,0">
                <CheckBox IsChecked="{Binding ShowSettings, Mode=TwoWay}" Foreground="{Binding TimerPanelTextColor}" >Show settings</CheckBox>
                <ComboBox ItemsSource="{Binding ThemeList}" SelectedItem="{Binding Theme, Mode=TwoWay}" 
                          Visibility="{Binding ShowSettings, Converter={local:BoolToVisibilityConverter}}" 
                          Margin="0,4,5,0" />
                <ComboBox ItemsSource="{Binding PresetList}" SelectedItem="{Binding Preset, Mode=TwoWay}" 
                    Visibility="{Binding ShowSettings, Converter={local:BoolToVisibilityConverter}}"
                          Margin="0,4,5,0" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,10">
                <Border Background="{Binding TimerPanelColor}" Grid.Row="0" Grid.Column="0" BorderThickness="1,1,0,1" BorderBrush="Black">
                    <StackPanel Orientation="Horizontal">
                        <Image MaxWidth="100" MaxHeight="100" Source="{Binding TheSettingSunImageSource}"></Image>
                        <TextBlock Padding="10,10,10,10" FontSize="32" Foreground="{Binding TimerPanelTextColor}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat=" {0} ">
                                    <Binding Path="The_Setting_Sun_Count"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Background="{Binding TimerPanelColor}" Grid.Row="0" Grid.Column="0" BorderThickness="1,1,0,1" BorderBrush="Black">
                    <StackPanel Orientation="Horizontal">
                        <Image MaxWidth="100" MaxHeight="100" Source="{Binding NightParadeImageSource}"></Image>
                        <TextBlock Padding="10,10,10,10" FontSize="32" Foreground="{Binding TimerPanelTextColor}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat=" {0} ">
                                    <Binding Path="NPWG_Count"/>
                                </MultiBinding>
                                
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Background="{Binding TimerPanelColor}" Grid.Row="0" Grid.Column="0" BorderThickness="1,1,0,1" BorderBrush="Black">
                    <StackPanel Orientation="Horizontal">
                        <Image MaxWidth="100" MaxHeight="100" Source="{Binding FreedShadowImageSource}"></Image>
                        <TextBlock Padding="10,10,10,10" FontSize="32" Foreground="{Binding TimerPanelTextColor}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat=" {0} ">
                                    <Binding Path="FreedShadow_Count"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Background="{Binding TimerPanelColor}" Grid.Row="0" Grid.Column="0" BorderThickness="1,1,1,1" BorderBrush="Black">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Foreground="{Binding TimerPanelTextColor}">
                            <TextBlock.Text>
                                Passive Cooldown
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Padding="10,10,10,10" FontSize="32" Foreground="{Binding TimerPanelTextColor}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat=" {0} ">
                                    <Binding Path="Passive_Count"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <Button Content="Save Preset" Margin="10,10,10,0" Padding="5,0,5,0" Height="25" Command="{Binding SavePresetCommand}"></Button>
                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Text="{Binding SaveSuccessfulMessage}" Foreground="{Binding TimerPanelTextColor}"></TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Center" Visibility="{Binding ShowSettings, Converter={local:BoolToVisibilityConverter}}" Margin="0,10,0,30">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" BorderThickness="1,1,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Title Switch key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,1,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindTitleSwitchKeyCommand}" Content="{Binding IsCapturing_Switching_State}"></Button>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Night Parade arrow key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindNightParadeArrowKeyCommand}" Content="{Binding IsCapturing_NPWG_State}"></Button>
            </Border>

            <Border Grid.Row="2" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Night Parade skill key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="2" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindNightParadeSkillKeyCommand}" Content="{Binding IsCapturing_NPWG_Skill_State}"></Button>
            </Border>

            <Border Grid.Row="3" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Freed Shadow arrow key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="3" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindFreedShadowArrowKeyCommand}" Content="{Binding IsCapturing_FreedShadow_State}"></Button>
            </Border>

            <Border Grid.Row="4" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="The Setting Sun arrow key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="4" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindSettingSunArrowKeyCommand}" Content="{Binding IsCapturing_The_Setting_Sun_State}"></Button>
            </Border>

            <Border Grid.Row="5" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Natural Flow arrow key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="5" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindNaturalFlowArrowKeyCommand}" Content="{Binding IsCapturing_Natural_Flow_State}"></Button>
            </Border>

            <Border Grid.Row="6" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Awakening key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="6" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindAwakeningKeyCommand}" Content="{Binding IsCapturing_Awakening_State}"></Button>
            </Border>

            <Border Grid.Row="7" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Onion key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="7" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindOnionKeyCommand}" Content="{Binding IsCapturing_Onion_State}"></Button>
            </Border>

            <Border Grid.Row="8" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Superhuman Apple key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="8" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindSuperhumanAppleKeyCommand}" Content="{Binding IsCapturing_Superhuman_Apple_State}"></Button>
            </Border>

            <Border Grid.Row="9" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Passive Cooldown" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="9" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBox Height="20" Padding="10,1,10,0" AcceptsReturn="False" Text="{Binding PassiveTimerValue}"/>
            </Border>

            <Border Grid.Row="10" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Passive key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="10" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindPassiveKeyCommand}" Content="{Binding IsCapturing_Passive_State}"></Button>
            </Border>

            <Border Grid.Row="11" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TimerPanelTextColor}">
                <TextBlock Text="Reset key" Padding="10,10,10,0" Foreground="{Binding TimerPanelTextColor}"/>
            </Border>
            <Border Grid.Row="11" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TimerPanelTextColor}">
                <Button Focusable="False" Height="20" Width="300" Command="{Binding BindResetKeyCommand}" Content="{Binding IsCapturing_Reset_State}"></Button>
            </Border>

        </Grid>
    </Grid>
</Window>
