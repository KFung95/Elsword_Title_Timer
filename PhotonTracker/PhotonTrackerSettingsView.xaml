<UserControl x:Class="PhotonTracker.PhotonTrackerSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotonTracker"
        mc:Ignorable="d" PreviewKeyDown="UserControl_PreviewKeyDown">
    <ScrollViewer MaxHeight="400" MinHeight="100" VerticalScrollBarVisibility="Auto">
        <Grid HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" BorderThickness="1,1,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Title Switch key" Padding="10,10,10,0" Foreground="{Binding TextColor}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,1,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindTitleSwitchKeyCommand}" Content="{Binding IsCapturing_Switching_State}"></Button>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Night Parade arrow key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindNightParadeArrowKeyCommand}" Content="{Binding IsCapturing_NPWG_State}"></Button>
            </Border>

            <Border Grid.Row="2" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Night Parade skill key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="2" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindNightParadeSkillKeyCommand}" Content="{Binding IsCapturing_NPWG_Skill_State}"></Button>
            </Border>

            <Border Grid.Row="3" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Night Parade skill 2 key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="3" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindNightParadeSkill2KeyCommand}" Content="{Binding IsCapturing_NPWG_Skill_2_State}"></Button>
            </Border>

            <Border Grid.Row="4" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Freed Shadow arrow key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="4" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindFreedShadowArrowKeyCommand}" Content="{Binding IsCapturing_FreedShadow_State}"></Button>
            </Border>

            <Border Grid.Row="5" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="The Setting Sun arrow key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="5" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindSettingSunArrowKeyCommand}" Content="{Binding IsCapturing_The_Setting_Sun_State}"></Button>
            </Border>

            <Border Grid.Row="6" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Natural Flow arrow key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="6" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindNaturalFlowArrowKeyCommand}" Content="{Binding IsCapturing_Natural_Flow_State}"></Button>
            </Border>

            <Border Grid.Row="7" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Awakening key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="7" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindAwakeningKeyCommand}" Content="{Binding IsCapturing_Awakening_State}"></Button>
            </Border>

            <Border Grid.Row="8" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Onion key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="8" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindOnionKeyCommand}" Content="{Binding IsCapturing_Onion_State}"></Button>
            </Border>

            <Border Grid.Row="9" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Superhuman Apple key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="9" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindSuperhumanAppleKeyCommand}" Content="{Binding IsCapturing_Superhuman_Apple_State}"></Button>
            </Border>

            <Border Grid.Row="10" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Passive Cooldown" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="10" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <TextBox Height="20" Padding="10,1,10,0" AcceptsReturn="False" Text="{Binding PassiveTimerValue}"/>
            </Border>

            <Border Grid.Row="11" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Passive key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="11" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindPassiveKeyCommand}" Content="{Binding IsCapturing_Passive_State}"></Button>
            </Border>

            <Border Grid.Row="12" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Reset key" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="12" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <Button Height="20" Width="300" Command="{Binding BindResetKeyCommand}" Content="{Binding IsCapturing_Reset_State}"></Button>
            </Border>

            <Border Grid.Row="13" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="{Binding TextColor}">
                <TextBlock Text="Show Panels" Padding="10,10,10,0" Foreground="{Binding TextColor}"/>
            </Border>
            <Border Grid.Row="13" Grid.Column="1" Padding="10,0,10,0" BorderThickness="1,0,1,1" BorderBrush="{Binding TextColor}">
                <WrapPanel Orientation="Horizontal" Width="250" >
                    <CheckBox IsChecked="{Binding ShowTSSPanel, Mode=TwoWay}" Foreground="{Binding TextColor}"
                              Margin="0,4,5,0">Show TSS</CheckBox>
                    <CheckBox IsChecked="{Binding ShowNightParadePanel, Mode=TwoWay}" Foreground="{Binding TextColor}"
                              Margin="0,4,5,0" Visibility="{Binding ShowSettings, Converter={local:BoolToVisibilityConverter}}">Show NP</CheckBox>
                    <CheckBox IsChecked="{Binding ShowFreedShadowPanel, Mode=TwoWay}" Foreground="{Binding TextColor}"
                              Margin="0,4,5,0" Visibility="{Binding ShowSettings, Converter={local:BoolToVisibilityConverter}}">Show FS</CheckBox>
                    <CheckBox IsChecked="{Binding ShowPassiveCDPanel, Mode=TwoWay}" Foreground="{Binding TextColor}"
                              Margin="0,4,5,0" Visibility="{Binding ShowSettings, Converter={local:BoolToVisibilityConverter}}">Show Passive CD</CheckBox>
                </WrapPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
